@model IEnumerable<Vladi2.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cart</h2>

<table class="table">
    <tr>
        <th></th>
        <th>
            Disc
        </th>
        <th>
            Category
        </th>
        <th>
            Amount
        </th>
        <th>
            Total Price
        </th>
        <th></th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="disc-img" style="background-image: url('@Url.Content("~/CD_Images/" + @item.Disc.PictureUrl)')"></div>
                </td>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Disc.Name)</b>
                    <p>@Html.DisplayFor(modelItem => item.Disc.Artist)</p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disc.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @(item.Amount * item.Disc.Price)
                </td>
                <td>
                    <input type="checkbox" />
                </td>
            </tr>
        }
    }
    else
    {
        <p>No Item in Cart</p>
    }

</table>
