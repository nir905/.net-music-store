@model List<Vladi2.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

@using (Html.BeginForm("changeUsersPrivileges", "AdminUsers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th width="1">#</th>
            <th>
                @Html.DisplayNameFor(model => model[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].IsAdmin)
            </th>
        </tr>

    @for (var i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                <div class="disc-img" style="background-image: url('@Url.Content(@Model[i].PictureUrl)')"></div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].UserName)
                @Html.HiddenFor(modelItem => modelItem[i].UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem[i].Phone)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => modelItem[i].IsAdmin)
            </td>

        </tr>
    }
        </table>

    <div class="row">
        <div class="col-md-1">
            <input type="submit" value="Update" class="btn btn-primary btn-block" />
        </div>
    </div>

}

<style>
    .table > tbody > tr > td {
        vertical-align: middle;
        text-align:center;
    }

    .table > tbody > tr > th {
        vertical-align: middle;
        text-align: center;
    }
</style>
