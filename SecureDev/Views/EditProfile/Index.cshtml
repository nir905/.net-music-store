@using Vladi2.Models
@model User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Profile</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @{ User userDetails = (User)ViewData["tempUser"]; }

@using (Html.BeginForm("Index", "EditProfile", FormMethod.Post, new { @class = "box-form1"}))
{ 
    <div class="container">
        <div class="row">
            <div class="col-xs-20 col-sm-20 col-md-13 col-lg-13 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0 toppad">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Edit Profile</h3>
                    </div>
                    
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-5 col-lg-5 " align="center"> <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"> </div>
                            <div class=" col-md-20 col-lg-20 ">
                                <table class="table table-user-information">
                                    <tbody >
                                        <tr>
                                            <td>First Name:</td>
                                            <td>
                                             @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @Value = userDetails.FirstName } })
                                            </td>
                                        </tr>
                                            @if (ViewBag.firstNameErr != null)
                                            {
                                                <tr>
                                                    <td colspan="2">
                                                        <div class="alert alert-danger">
                                                            @ViewBag.firstNameErr
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        <tr>
                                            <td>Last Name:</td>
                                            <td>
                                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @Value = userDetails.LastName } })
                                            </td>
                                        </tr>
                                        @if (ViewBag.lastNameErr != null)
                                        {
                                            <tr>
                                                <td colspan="2">
                                                    <div class="alert alert-danger">
                                                        @ViewBag.lastNameErr
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                        <tr>
                                            <td>Email:</td>
                                            <td>@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @Value = userDetails.Email } })</td>
                                        </tr>

                                        @if (ViewBag.emailErr != null)
                                        {
                                            <tr>
                                                <td colspan="2">
                                                    <div class="alert alert-danger">
                                                        @ViewBag.emailErr
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                        <tr>
                                            <td>Phone Number:</td>
                                            <td>@Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @Value = userDetails.Phone } })</td>
                                        </tr>

                                        @if (ViewBag.phoneErr != null)
                                        {
                                            <tr>
                                                <td colspan="2">
                                                    <div class="alert alert-danger">
                                                        @ViewBag.phoneErr
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                   <div class="col-md-offset-0 col-md-0 col-lg-0 " >
                                                        <input type="submit" value="Update" class="btn btn-primary btn-block" /> 
                                                       
                                                   </div>
                                                </div> 
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <div class="col-md-offset-4 col-md-0 col-lg-0 ">
                                                        <input type="button" value="Cancel" class="btn btn-danger btn-block" onclick="location.href='@Url.Action("Index", "Profile")'" />
                                                    </div>
                                                </div>
                                           </td>
                                        </tr>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
