@model IEnumerable<Vladi2.Models.Topic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @*<meta name="viewport" content="width=device-width" />*@
    <title>Forum</title>

</head>

<body>

    <h2>Forum</h2>

    <p class="createTopic">
        @Html.ActionLink("Add Topic", "createNewTopic", "Forum", new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped">
        <thead class="thead-inverse">
            <tr>
                <th>Topic</th>
                <th>Author</th>
                <th>Date</th>
            </tr>
        </thead>


        @foreach (var topic in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(topic.Title, "ReadTopic", new { topic.TopicID })
                </td>

                <td>
                    @Html.DisplayFor(modelItem => topic.Author)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => topic.TopicTime)
                </td>
            </tr>
        }

    </table>


</body>