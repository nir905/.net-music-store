@model Vladi2.Models.Disc

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Edit", "AdminDisc", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "box-form" }))
{
    <h4>Edit Disc</h4>

    @Html.AntiForgeryToken()
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @if (ViewBag.nameErr != null)
        {
            <div class="form-group alert alert-danger">
                @ViewBag.nameErr
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Artist, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Artist, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @if (ViewBag.artistErr != null)
        {
            <div class="form-group alert alert-danger">
                @ViewBag.artistErr
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @if (ViewBag.priceErr != null)
        {
            <div class="form-group alert alert-danger">
                @ViewBag.priceErr
            </div>
        }


        <div class="form-group">
            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @if (ViewBag.durationErr != null)
        {
            <div class="form-group alert alert-danger">
                @ViewBag.durationErr
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.SongsAmount, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.SongsAmount, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @if (ViewBag.amountErr != null)
        {
            <div class="form-group alert alert-danger">
                @ViewBag.amountErr
            </div>
        }

        <div class="form-group">
            <label class="control-label col-md-3">Category</label>
            <div class="col-md-3">
                @Html.DropDownListFor(x => x.Category.CategoryID, new SelectList(ViewBag.Categories, "CategoryID", "CategoryName"))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3" align="center">
                <div class="disc-img" style="background-image: url('@Url.Content("~/CD_Images/"+@Model.PictureUrl)')" id="img-preview"></div>
            </div>
        </div>
        @if (ViewBag.imageErr != null)
        {
            <div class="form-group alert alert-danger">
                @ViewBag.imageErr
            </div>
        }
        @Html.HiddenFor(item => item.PictureUrl)
        @Html.HiddenFor(item=>item.DiscID)

        <div class="form-group">
            <div class="col-md-1" align="right">
                <input type="file" name="file" id="file" style="width: 200px;" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index","AdminDisc",null,new {@class="btn btn-danger"})
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
